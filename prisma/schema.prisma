generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

enum ClientType {
  PESSOA_FISICA
  PESSOA_JURIDICA
}

enum Role {
  ADMIN
  USER
}

enum OrderStatus {
  PENDENTE
  EM_FECHAMENTO
  PAGO
}

enum FechamentoStatus {
  PENDENTE
  PAGO
}

model User {
  id       Int    @id @default(autoincrement())
  nome     String
  role     Role   @default(USER)
  usuario  String @unique
  senha    String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Client {
  id                Int       @id @default(autoincrement())
  type              ClientType
  nome              String
  // Campos para pessoa física
  cpf               String?   @unique
  // Campos para pessoa jurídica
  razaoSocial       String?
  cnpj              String?   @unique
  inscricaoEstadual String?

  endereco String?
  telefone String?
  email    String?
  saldo   Decimal   @default(0) @db.Decimal(14, 2)

  veiculos Veiculo[]
  pedidos  Pedido[]
  fechamentos Fechamento[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Veiculo {
  id        Int     @id @default(autoincrement())
  placa     String  @unique
  metragem  Float
  client    Client  @relation(fields: [clientId], references: [id], onDelete: Cascade)
  clientId  Int

  pedidos   Pedido[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Produto {
  id       Int     @id @default(autoincrement())
  nome     String
  valor_m3 Decimal @db.Decimal(12, 2)

  pedidos  Pedido[]   // referência opcional (pedidos guardam nome/valor também)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Pedido {
  id Int @id @default(autoincrement())

  client    Client?  @relation(fields: [clientId], references: [id], onDelete: SetNull)
  clientId  Int?

  // denormalizado — armazena nome e valor do produto no pedido
  produtoId    Int?      // opcional: referência ao produto cadastrado
  produto      Produto?  @relation(fields: [produtoId], references: [id])
  produto_valor Decimal   @db.Decimal(12, 2)

  // veículo (referência + campos denormalizados)
  veiculoId       Int?     // opcional caso não haja veículo
  veiculo         Veiculo? @relation(fields: [veiculoId], references: [id])

  metragem      Float
  valor_total   Decimal   @db.Decimal(12, 2)
  data_do_pedido DateTime @default(now())
  status        OrderStatus @default(PENDENTE)

  fechamento   Fechamento? @relation(fields: [fechamentoId], references: [id])
  fechamentoId Int?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Fechamento {
  id        Int      @id @default(autoincrement())
  clientId Int?
  client   Client?   @relation(fields: [clientId], references: [id])
  data      DateTime @default(now())
  total     Decimal  @db.Decimal(14, 2)
  descricao String?
  status   FechamentoStatus @default(PENDENTE)

  pedidos   Pedido[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}